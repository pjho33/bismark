{
  "name": "NGS-DSS Analysis Env",
  "image": "bioconductor/bioconductor_docker:RELEASE_3_18",
  "onCreateCommand": "apt-get update && apt-get install -y libhdf5-dev libcurl4-openssl-dev libssl-dev libxml2-dev python3 python3-pip",
  "postCreateCommand": "R -e \"BiocManager::install(c('DSS', 'bsseq', 'rhdf5', 'HDF5Array', 'dmrseq', 'data.table', 'gtools', 'ggplot2', 'tidyverse'), ask=FALSE)\"",
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "ms-python.python"
      ]
    }
  },
  "remoteUser": "rstudio"
}